<?xml version="1.0"?>
<map proto="1.4.2">
<name>Bizarre Bazaar</name>
<version>1.0.4</version>
<objective>Hold the flag for 200 seconds to win!</objective>
<authors>
	<author uuid="6bec5c3a-4934-4b19-9aa8-c7c569820f7d"/> <!-- Claf -->
	<author uuid="621b2aa8-4e5f-4ed8-bd36-0ae2f8952a06"/> <!-- Strangey -->
</authors>
<contributors>
    <contributor uuid="9225421c-3c09-4d97-bb80-f6a77c1f360b"/> <!-- Jexel -->
    <contributor uuid="9929437a-9b7d-4d7a-b05d-e22fe93ac042"/> <!-- triplezko -->
</contributors>
<respawn blackout="true" delay="5.0s" auto="true"/>
<gamemode>ctf</gamemode>
<teams>
    <team id="blue" color="blue" max="7" min="6" max-overfill="7">Blue</team>
    <team id="red" color="dark red" max="7" min="6" max-overfill="7">Red</team>
</teams>
<kits>
    <kit id="spawn">
		<clear/>
        <game-mode>adventure</game-mode>
        <item slot="0" unbreakable="true">stone sword</item>
        <item slot="2">golden apple</item>
        <item slot="8" amount="24">arrow</item>
        <leggings enchantment="protection projectile:2" unbreakable="true">iron leggings</leggings>
        <health>20</health>
    </kit>
    <kit id="red-spawn" parents="spawn">
        <helmet color="cd0000" unbreakable="true" material="leather helmet"/>
        <chestplate color="cd0000" unbreakable="true" material="leather chestplate"/>
    </kit>
    <kit id="blue-spawn" parents="spawn">
        <helmet color="0066cc" unbreakable="true" material="leather helmet"/>
        <chestplate color="0066cc" unbreakable="true" material="leather chestplate"/>
    </kit>
    <kit id="bow-kit-red" force="true">
        <item slot="1" unbreakable="true">bow</item>
		    <boots locked="true" color="cd0000" unbreakable="true" enchantment="protection fall:2" material="leather boots"/>
    </kit>
	  <kit id="bow-kit-blue" force="true">
		    <item slot="1" unbreakable="true">bow</item>
		    <boots locked="true" color="0066cc" unbreakable="true" enchantment="protection fall:2" material="leather boots"/>
	  </kit>
    <kit id="flag-kit" force="true">
        <effect duration="oo" amplifier="-3">health boost</effect>
        <effect duration="3" amplifier="2">absorption</effect>
    </kit>
    <kit id="reset-health" force="true">
        <effect duration="1" amplifier="0">health boost</effect>
        <effect duration="1" amplifier="10">regeneration</effect>
        <boots locked="true" unbreakable="true" enchantment="protection fall:2">gold boots</boots>
    </kit>
    <!--  -->
    <kit id="red-flag" force="true">
        <boots color="E5E533" unbreakable="true" enchantment="protection fall:2">leather boots</boots>
    </kit>
    <kit id="blue-flag" force="true">
        <boots color="7F3FB2" unbreakable="true" enchantment="protection fall:2">leather boots</boots>
    </kit>
</kits>
<spawns>
    <default yaw="-45">
        <regions>
            <cylinder base="239.5,27,-16.5" radius="1" height="1"/>
        </regions>
    </default>
    <spawn team="blue" kit="blue-spawn" yaw="-135">
        <regions>
            <point>237.5,26,79.5</point>
        </regions>
    </spawn>
    <spawn team="red" kit="red-spawn" yaw="45">
        <regions>
            <point>335.5,26,-18.5</point>
        </regions>
    </spawn>
</spawns>
<filters>
    <not id="activate-portal">
        <same-team>
            <carrying-flag id="carrying-flag">flag</carrying-flag>
        </same-team>
    </not>
    <all id="red-player-carrying">
        <filter id="carrying-flag"/>
        <team id="only-red">red</team>
    </all>
    <all id="blue-player-carrying">
        <filter id="carrying-flag"/>
        <team id="only-blue">blue</team>
    </all>
    <all id="red-portal-filter">
        <not>
            <filter id="activate-portal"/>
        </not>
        <filter id="only-red"/>
        <filter id="no-shoes"/>
    </all>
    <all id="blue-portal-filter">
        <not>
            <filter id="activate-portal"/>
        </not>
        <filter id="only-blue"/>
        <filter id="no-shoes"/>
    </all>
    <not id="no-shoes">
        <any id="shoes">
			      <wearing><item color="cd0000" unbreakable="true" enchantment="protection fall:2" material="leather boots"/></wearing>
            <wearing><item color="0066cc" unbreakable="true" enchantment="protection fall:2" material="leather boots"/></wearing>
            <wearing><item color="E5E533" unbreakable="true" enchantment="protection fall:2" material="leather boots"/></wearing>
            <wearing><item color="7F3FB2" unbreakable="true" enchantment="protection fall:2" material="leather boots"/></wearing>
        </any>
    </not>
    <not id="no-give-red">
        <any>
            <filter id="shoes"/>
            <not>
				        <all>
                    <filter id="activate-portal"/>
					          <filter id="only-red"/>
				        </all>
            </not>
        </any>
    </not>
	  <not id="no-give-blue">
		    <any>
			      <filter id="shoes"/>
			      <not>
				        <all>
                	  <filter id="activate-portal"/>
					          <filter id="only-blue"/>
				        </all>
			      </not>
		    </any>
	  </not>
    <not id="no-use">
        <any>
            <material>beacon</material>
            <material>daylight detector inverted</material>
            <material>trap door</material>
            <material>fence gate</material>
        </any>
    </not>
</filters>
<portals>
    <portal id="red-portal" observers="false" x="@335.5" y="@26" z="@-18.5" filter="red-portal-filter" region="bow" sound="false"/>
    <portal id="blue-portal" observers="false" x="@237.5" y="@26" z="@79.5" filter="blue-portal-filter" region="bow" sound="false"/>
</portals>
<regions>
    <negative id="apply-flag-kit">
        <union>
            <cuboid id="middle" min="288,17,32" max="285,21,29"/>
            <cuboid id="nw" min="264,23,8" max="261,26,5"/>
            <cuboid id="se" min="309,23,53" max="312,26,56"/>
        </union>
    </negative>
    <union id="bow">
        <cuboid min="334,26,-17" max="315,0,2"/>
        <cuboid min="239,26,78" max="258,0,59"/>
    </union>
    <apply kit="blue-flag" region="apply-flag-kit" filter="blue-player-carrying"/>
    <apply kit="red-flag" region="apply-flag-kit" filter="red-player-carrying"/>
    <apply kit="bow-kit-red" region="bow" filter="no-give-red"/>
	<apply kit="bow-kit-blue" region="bow" filter="no-give-blue"/>
    <below id="below-26" y="26"/>
    <apply block="never" use="no-use"/>
</regions>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>iron leggings</item>
    <item>leather boots</item>
    <item>leather chestplate</item>
</itemremove>
<score>
    <limit>200</limit>
    <deaths>0</deaths>
    <kills>0</kills>
</score>
<flags>
    <post id="post" return-time="0s" respawn-time="20s">
        <block>286,20,30</block>
        <block>310,23,54</block>
        <block>262,23,6</block>
    </post>
    <flag id="flag" name="Flag" color="purple" shared="true" post="post" points-rate="1" pickup-kit="flag-kit" drop-kit="reset-health"/>
</flags>
<itemkeep>
    <item>golden apple</item>
    <item>arrow</item>
</itemkeep>
<killreward>
    <item amount="12">arrow</item>
    <item>golden apple</item>
</killreward>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>
